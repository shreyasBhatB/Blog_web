<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %></title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container py-5">
        <div class="card shadow-lg">
            <div class="card-body">
                <h1 class="card-title display-5 text-primary mb-3"><%= blog.title %></h1>
                <p class="card-text fs-5"><%= blog.content %></p>

                <hr>

                <p class="mb-2"><strong>Category:</strong> <span class="badge bg-secondary"><%= blog.category %></span></p>
                <p class="mb-4"><strong>Created At:</strong> <%= blog.createdAt.toLocaleString() %></p>

                <div class="d-flex flex-wrap gap-3 justify-content-center  text-center" ">

                    <a href="/edit/<%= blog._id %>" 
                       class="btn btn-warning btn-lg rounded-pill flex-grow-1 text-center d-flex align-items-center justify-content-center"
                       style="min-width: 100px;max-width: 125px; min-height: 56px;max-height: 60px;">
                        ‚úèÔ∏è Edit
                    </a>
                
                    <form action="/delete/<%= blog._id %>" method="POST">
                        <button type="submit" 
                                class="btn btn-danger btn-lg rounded-pill flex-grow-1 text-center d-flex align-items-center justify-content-center"
                                style="min-width: 100px;max-width: 125px; min-height: 56px;max-height: 60px;">
                            üóëÔ∏è Delete
                        </button>
                    </form>
                
                    <a href="/" 
                       class="btn btn-primary btn-lg rounded-pill flex-grow-1 text-center d-flex align-items-center justify-content-center"
                       style="min-width: 100px;max-width: 125px; min-height: 56px;max-height: 60px;">
                        ‚¨ÖÔ∏è Back
                    </a>
                </div>
                
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

